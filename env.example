# Environment Configuration Example
# Copy this file to .env.local for local development
# Set these variables in Vercel dashboard for production

# Application Environment
NODE_ENV=development
PORT=3000

# Database Configuration (Turso)
TURSO_DATABASE_URL=file:./database.sqlite
TURSO_AUTH_TOKEN=

# Security Configuration
SESSION_SECRET=dev-secret-change-in-production-min-32-chars
CORS_ORIGINS=*

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW=60000

# Authentication Security
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=300000

# Business Rules (optional overrides)
MIN_ALLOCATION=60
MAX_ALLOCATION=3600
MIN_TIME_LIMIT=60
MAX_TIME_LIMIT=7200
DEFAULT_ALLOCATION=300
DEFAULT_TIME_LIMIT=1800

# Database Performance
DB_CONNECTION_TIMEOUT=30000
DB_MAX_RETRIES=3

# Request Limits
REQUEST_SIZE_LIMIT=1mb
MAX_REQUEST_SIZE=1mb
